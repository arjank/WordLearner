{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Phrase</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Infirstlanguage</th>
                <td>{{ entity.inFirstLanguage }}</td>
            </tr>
            <tr>
                <th>Insecondlanguage</th>
                <td>{{ entity.inSecondLanguage }}</td>
            </tr>
            <tr>
                <th>Remark</th>
                <td>{{ entity.remark }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('phrase') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('phrase_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
